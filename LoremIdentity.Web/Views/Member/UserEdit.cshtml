@{
    ViewData["Title"] = "User Udpate";
}

@model UserEditViewModel

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial");
}

<div class="row justify-content-center">
    <div class="card border-secondary mb-6 justify-content-center col-5">
        <div class="card-header bg-white border-secondary"><h4>Kullanıcı Güncelle</h4></div>
        <div class="card-body border-secondary">
            @if (TempData["SuccededMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["SuccededMessage"]
                </div>
            }
            <div asp-validation-summary="ModelOnly" class="alert-danger" role="alert"></div>

            <form method="post" asp-controller="Member" asp-action="UserEdit" enctype="multipart/form-data">

                <div class="mb-3">
                    <label class="form-label" asp-for="Username" ></label>
                    <input class="form-control border-secondary" asp-for="Username">
                    <span class="text-danger" asp-validation-for="Username"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Email"></label>
                    <input class="form-control border-secondary" asp-for="Email">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
               
                <div class="mb-3">
                    <label class="form-label" asp-for="Phone"></label>
                    <input class="form-control border-secondary" asp-for="Phone">
                    <span class="text-danger" asp-validation-for="Phone"></span>
                </div> 
                <div class="mb-3">
                    <label class="form-label" asp-for="BirthDate"></label>
                    <input class="form-control border-secondary" asp-for="BirthDate">
                    <span class="text-danger" asp-validation-for="BirthDate"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="City"></label>
                    <input class="form-control border-secondary" asp-for="City">
                    <span class="text-danger" asp-validation-for="City"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Gender"></label>
                   <select class="form-control" asp-for="Gender" asp-items="ViewBag.gender">     
                       <option value="">Cinsiyet Seçiniz</option>
                   </select>
                    <span class="text-danger" asp-validation-for="Gender"></span>
                </div> 
                <div class="mb-3">
                    <label class="form-label" asp-for="Picture"></label>
                   <input type="file" class="form-control" asp-for="Picture" />
                    <span class="text-danger" asp-validation-for="Picture"></span>
                </div>

                <div class="mb-3 form-check">
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </div>
            </form>
        </div>
    </div>

</div>



