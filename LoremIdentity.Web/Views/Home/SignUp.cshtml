@{
    ViewData["Title"] = "Üye Kayıt";
}
@model SignUpViewModel

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial");
}

<div class="row justify-content-center">
    <div class="card border-secondary mb-6 justify-content-center col-5">
        <div class="card-header bg-white border-secondary"><h4>Kullanıcı Kayıt</h4></div>
        <div class="card-body border-secondary">
            @if (TempData["SuccededMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["SuccededMessage"]
                </div>
            }
            <div asp-validation-summary="ModelOnly" class="alert-danger" role="alert"></div>

            <form asp-controller="Home" asp-action="SignUp" method="post">
                <div class="mb-3">
                    <label class="form-label" asp-for="Username"></label>
                    <input type="text" class="form-control border-secondary" asp-for="Username">
                    <span class="text-danger" asp-validation-for="Username"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Email"></label>
                    <input type="email" class="form-control border-secondary" asp-for="Email">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="City"></label>
                    <input type="text" class="form-control border-secondary" asp-for="City">
                    <span class="text-danger" asp-validation-for="City"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Phone"></label>
                    <input type="text" class="form-control border-secondary" asp-for="Phone">
                    <span class="text-danger" asp-validation-for="Phone"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Password"></label>
                    <input class="form-control border-secondary" asp-for="Password">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="PasswordConfirm"></label>
                    <input class="form-control border-secondary" asp-for="PasswordConfirm">
                    <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
                </div>

                <div class="mb-3 form-check">
                    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                </div>
            </form>
        </div>
    </div>

</div>

