@{
    ViewData["Title"] = "Giriş yap";
}
@model SignInViewModel

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial");
}

<div class="row justify-content-center">
    <div class="card border-secondary mb-4 justify-content-center col-4">
        <div class="card-header bg-white border-secondary"><h4>Kullanıcı Giriş</h4></div>
        <div class="card-body border-secondary">

            <div asp-validation-summary="ModelOnly" class="alert-danger" role="alert"></div>

            <form asp-controller="Home" asp-action="SignIn" asp-route-returnUrl="@Context.Request.Query["returnURL"]" method="post">
               
                <div class="mb-4">
                    <label class="form-label" asp-for="Email"></label>
                    <input type="email" class="form-control border-secondary" asp-for="Email">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>               
                <div class="mb-4">
                    <label class="form-label" asp-for="Password"></label>
                    <input  class="form-control border-secondary" asp-for="Password">
                    <span class="text-danger" asp-validation-for="Password"></span> 
                </div> 
                <div class="form-check mb-4">
                    <input class="form-check-input" asp-for="RememberMe">
                    <label class="form-check-label" asp-for="RememberMe" ></label>
                </div>
                <div class="mb-4 form-check row d-flex">
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary">Giriş Yap</button>
                    </div>
                    <div class="col-md-8">
                        <a class="btn btn-link" asp-controller="Home" asp-action="ForgetPassword">Şifremi Unuttum?</a>
                    </div>
                   
                </div>
                
            </form>
        </div>
    </div>

</div>



