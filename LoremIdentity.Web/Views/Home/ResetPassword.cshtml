
@{
    ViewData["Title"] = "ResetPassword";
}

@model ResetPasswordViewModel

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial");
}

<div class="row justify-content-center">
    <div class="card border-secondary mb-6 justify-content-center col-5">
        <div class="card-header bg-white border-secondary"><h4>Yeni Şifre Oluşturma</h4></div>
        <div class="card-body border-secondary">
            @if (TempData["SuccededMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["SuccededMessage"]
                </div>
            }
            <div asp-validation-summary="ModelOnly" class="alert-danger" role="alert"></div>

            <form method="post">
              
                <div class="mb-3">
                    <label class="form-label" asp-for="Password"></label>
                    <input  class="form-control border-secondary" asp-for="Password">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="PasswordConfirm"></label>
                    <input  class="form-control border-secondary" asp-for="PasswordConfirm">
                    <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
                </div>

                <div class="mb-3 form-check">
                    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                </div>
            </form>
        </div>
    </div>

</div>



