@model List<AdminModel.RoleAssingUserViewModel>

@{
    ViewData["Title"] = "RoleToUserAssing";
}


<div class="row">
    <div class="col-md-6 offset-md-3">
        <h3 class="mb-2">Role Atama</h3>
        <hr />
        <form asp-action="RoleToUserAssing" asp-controller="Role" asp-route-id="@ViewBag.UserID" method="post">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" asp-for="@Model[i].Exist" />
                    <label class="form-check-label" >@Model[i].Name</label>
                    <input type="hidden" asp-for="@Model[i].Id"/>
                    <input type="hidden" asp-for="@Model[i].Name "/>
                </div>
                
            }
            <div class="form-group m-1">
                <input type="submit" value="Role Ata" class="btn btn-primary" />
            </div>
        </form>
        <div class="mt-2">
            <a asp-controller="Home" asp-action="UserList">Kullanııclara dön</a>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


