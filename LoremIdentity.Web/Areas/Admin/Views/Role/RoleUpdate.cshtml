@model AdminModel.RoleUpdateViewModel

@{
    ViewData["Title"] = "RoleUpdate";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h3 class="mb-2">Role Güncelle</h3>
        <hr />
        @if (TempData["SuccededMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccededMessage"]
            </div>
        }
        <form asp-action="RoleUpdate" asp-controller="Role" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group m-1">
                <label asp-for="Name" class="control-label m-1"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger m-1"></span>
            </div>

            <div class="form-group m-1">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </form>
        <div class="mt-2">
            <a asp-action="Index">Indexe dön</a>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}